---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { titulo, descripcion, imagen } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{titulo}</title>

        <!-- Primary Meta Tags -->
        <title>{titulo}</title>
        <meta name="title" content={titulo} />
        <meta name="description" content={descripcion} />

        <!-- Bootstrap -->
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
            crossorigin="anonymous"
        />
        <script
            is:inline
            src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>

        <!-- Google fonts -->
        <link
            rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Text+Me+One&display=swap"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
        />

        <link href="/assets/css/style.css" rel="stylesheet" />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:title" content={titulo} />
        <meta property="og:description" content={descripcion} />
        <meta property="og:image" content={new URL(imagen, Astro.url)} />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={Astro.url} />
        <meta property="twitter:title" content={titulo} />
        <meta property="twitter:description" content={descripcion} />
        <meta property="twitter:image" content={new URL(imagen, Astro.url)} />
    </head>
    <body>
        <Header />
        <slot />
        <Footer />
    </body>
</html>
