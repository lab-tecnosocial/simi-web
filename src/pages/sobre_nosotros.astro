      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 justify-center items-center"
    >
      {
        [
          {
            nombre: "Persona 1",
            imagen: "/assets/img/equipo/persona1.jpg",
            linkedin: "https://linkedin.com/in/persona1",
            profesion: "Dev",
