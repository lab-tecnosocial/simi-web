            linkedin: "https://linkedin.com/in/persona3",
            profesion: "Product",
          },
        ].map((miembro, index) => (
          <Card
            key={index}
            nombre={miembro.nombre}
            imagen={miembro.imagen}
            linkedin={miembro.linkedin}
            profesion={miembro.profesion}
